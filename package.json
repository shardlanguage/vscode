{
  "name": "shard-for-vscode",
  "displayName": "Shard for VSCode",
  "description": "Official VSCode extension for the Shard programming language.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "repository": "https://github.com/shardlanguage/vscode",
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [],
    "languages": [
      {
        "id": "shard",
        "aliases": [
          "Shard",
          "shard"
        ],
        "extensions": [
          ".shard",
          ".shd",
          ".sd"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "shard",
        "scopeName": "source.shard",
        "path": "./syntaxes/shard.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "convert-grammar": "npx js-yaml syntaxes/shard.tmLanguage.yaml > syntaxes/shard.tmLanguage.json"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.36.0",
    "js-yaml": "^4.1.0",
    "typescript": "^5.9.3"
  }
}
